@using BTCK_PhanTienDo.Models
@functions{
    public MyDbContext db = new MyDbContext();
    public string GetCategory(int intCategoryID)
    {
        CategoriesRecord record = db.Categories.Where(tbl => tbl.ID == intCategoryID).FirstOrDefault();
        return record != null ? record.Name : "";
    }
    // lay so sao
    public int GetStar(int intProductID, int intStar)
    {
        List<RatingRecord> listRecord = db.Rating.Where(tbl => tbl.ProductID == intProductID && tbl.Star == intStar).ToList();
        return listRecord.Count;
    }
}

