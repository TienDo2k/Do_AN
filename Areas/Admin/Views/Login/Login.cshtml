
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/Admin/css/bootstrap.min.css">
    <link href="~/Admin/assest/login.css" rel="stylesheet" />
</head>
<body>
    <div class="main">

        <form action="" method="post" class="form" id="form-1">
            <h3 class="heading">Đăng nhập</h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="spacer"></div>
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="text" placeholder="VD: email@domain.com" class="form-control" value="ptd@gmail.com">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control" value="123">
                <span class="form-message"></span>
            </div>
            <button class="form-submit">Đăng nhập</button>
            <a href="./ForgotPassword">Quên mật khẩu</a>
            
        </form>
       
    </div>
    
    <script src="~/Admin/assest/validate.js"></script>
    <script>
        Validator({
            form: '#form-1',
            rules: [

                Validator.isRequired('#email'),
                Validator.isEmail('#email', 'vui lòng nhập đúng email'),
                Validator.minLength('#password', 3, `vui lòng nhập nhiều hơn ${3} kí tự`),
                ]

               })
    </script>
