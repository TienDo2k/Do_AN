                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Amount</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {<text>@Model.Amount</text>}" name="Amount" class="form-control" required />
                    </div>
                </div>
                <!-- rows -->
                <!-- rows -->
