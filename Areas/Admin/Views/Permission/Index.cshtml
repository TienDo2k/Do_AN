@using  BTCK_PhanTienDo.Models
@functions{
    public MyDbContext db = new MyDbContext();
    public List<CategoriesRecord> ListCategories()
    {
        List<CategoriesRecord> list = db.Categories.OrderByDescending(tbl => tbl.ID).ToList();
        return list.Count > 0 ? list : new List<CategoriesRecord>();
    }

    public List<CategoriesRecord> ListSubCategories(int _CategoryID)
    {
        List<CategoriesRecord> listRecord = db.Categories.Where(tbl => tbl.ID == _CategoryID).OrderByDescending(tbl => tbl.ID).ToList();
        return listRecord.Count > 0 ? listRecord : new List<CategoriesRecord>();
    }
}
 
